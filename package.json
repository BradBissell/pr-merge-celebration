{
  "name": "pr-merge-celebration",
  "version": "1.0.0",
  "description": "GitHub Action that celebrates merged PRs with Slack notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "github-action",
    "slack",
    "pr-celebration"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@actions/core": "^1.10.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^1.0.4",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "vitest": "^1.0.4"
  }
}
